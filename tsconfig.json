{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true
  },
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules", "babel.config.js"]
}
